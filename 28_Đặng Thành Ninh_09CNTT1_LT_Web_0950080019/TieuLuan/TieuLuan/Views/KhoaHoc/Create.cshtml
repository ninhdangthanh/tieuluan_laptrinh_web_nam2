@model TieuLuan.Models.KhoaHoc

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center"><strong>Tạo mới</strong></h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
