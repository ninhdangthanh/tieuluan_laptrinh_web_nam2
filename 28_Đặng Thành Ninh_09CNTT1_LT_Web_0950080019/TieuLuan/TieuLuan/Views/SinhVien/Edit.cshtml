@model TieuLuan.Models.SinhVien

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center"><strong>Sửa</strong></h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3 style="text-align:center">Sinh viên</h3>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MaSinhVien)
        <div class="form-group" >
            <label class="control-label col-md-4">Mã sinh viên</label>
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.MaSinhVien, new { @disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.MaSinhVien)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Họ sinh viên</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.HoSinhVien)
                @Html.ValidationMessageFor(model => model.HoSinhVien)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Tên sinh viên</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.TenSinhVien)
                @Html.ValidationMessageFor(model => model.TenSinhVien)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Ngày sinh</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.NgaySinh)
                @Html.ValidationMessageFor(model => model.NgaySinh)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Phái</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Phai)
                @Html.ValidationMessageFor(model => model.Phai)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Điện thoại</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.DienThoai)
                @Html.ValidationMessageFor(model => model.DienThoai)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Địa chỉ</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.DiaChi)
                @Html.ValidationMessageFor(model => model.DiaChi)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Mã khoa</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.MaKhoa)
                @Html.ValidationMessageFor(model => model.MaKhoa)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
