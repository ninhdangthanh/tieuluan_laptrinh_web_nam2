@model TieuLuan.Models.Khoa

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center"><strong>Tạo mới</strong></h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3 style="text-align:center">Khoa</h3>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <label class="control-label col-md-4">Mã khoa</label>
            <div class="col-md-8 ">
                @Html.EditorFor(model => model.MaKhoa)
                @Html.ValidationMessageFor(model => model.MaKhoa)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Tên khoa</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.TenKhoa)
                @Html.ValidationMessageFor(model => model.TenKhoa)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Địa chỉ</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.DiaChi)
                @Html.ValidationMessageFor(model => model.DiaChi)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Điện thoại</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.DienThoai)
                @Html.ValidationMessageFor(model => model.DienThoai)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về danh sách", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
