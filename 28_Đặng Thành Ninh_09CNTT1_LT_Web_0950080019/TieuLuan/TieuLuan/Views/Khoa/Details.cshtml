@model TieuLuan.Models.Khoa

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    th, td {
        padding-top: 0;
        padding-bottom: 10px;
        padding-left: 10px;
        padding-right: 10px;
    }

    table {
        width: 100%;
    }

    td {
        font-size: 16px;
        width: 49%;
    }

    th {
        text-align: right;
        width: 49%;
    }

    .colon {
        width: 2%;
        text-align: center;
    }
</style>
<h2 style="text-align:center"><strong>Chi tiết</strong></h2>

<div>
    <h3 style="text-align:center">Khoa</h3>
	<hr />
    <table style="margin: 0 auto;">
        <tr>
            <th><h4><strong>Mã Khoa</strong></h4></th>
            <td class="colon">:</td>
            <td>@Html.DisplayFor(model => model.MaKhoa)</td>
        </tr>
        <tr>
            <th><h4><strong>Tên Khoa</strong></h4></th>
            <td class="colon">:</td>
            <td>@Html.DisplayFor(model => model.TenKhoa)</td>
        </tr>
        <tr>
            <th><h4><strong>Địa chỉ</strong></h4></th>
            <td class="colon">:</td>
            <td>@Html.DisplayFor(model => model.DiaChi)</td>
        </tr>
        <tr>
            <th><h4><strong>Điện thoại</strong></h4></th>
            <td class="colon">:</td>
            <td>@Html.DisplayFor(model => model.DienThoai)</td>
        </tr>
    </table>
</div>
<p>
    @Html.ActionLink("Trở về danh sách", "Index")
</p>
