@model TieuLuan.Models.MonHoc

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center"><strong>Sửa</strong></h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3 style="text-align:center">Môn học</h3>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MaMonHoc)
        <div class="form-group">
            <label class="control-label col-md-4">Mã môn học</label>
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.MaMonHoc, new { @disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.MaMonHoc)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Tên môn học</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.TenMonHoc)
                @Html.ValidationMessageFor(model => model.TenMonHoc)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Số tiết lý thuyết</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.SoTietLyThuyet)
                @Html.ValidationMessageFor(model => model.SoTietLyThuyet)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Số tiết thực hành</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.SoTietThucHanh)
                @Html.ValidationMessageFor(model => model.SoTietThucHanh)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
