@model TL_LT_Web_14.Models.NgoaiNgu

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .form-horizontal {
        margin-left: 50%;
        transform: translateX(-50%);
    }

    h2, h4 {
        text-align: center;
    }
</style>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2>Tạo mới</h2>
        <h4>Ngoại ngữ</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <label class="control-label col-md-4">Mã ngoại ngữ</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.MaNgoaiNgu)
                @Html.ValidationMessageFor(model => model.MaNgoaiNgu)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Tên ngoại ngữ</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.TenNgoaiNgu)
                @Html.ValidationMessageFor(model => model.TenNgoaiNgu)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-6 col-md-10">
                <input type="submit" value="Tạo mới" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
